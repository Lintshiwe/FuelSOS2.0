# Environment Configuration
NODE_ENV=development
PORT=3000

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-service-account-email
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Twilio Configuration for VoIP
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_API_KEY_SID=your-twilio-api-key-sid
TWILIO_API_KEY_SECRET=your-twilio-api-key-secret
TWILIO_APP_SID=your-twilio-app-sid

# JWT Secret for Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Payment Gateway Configuration
PAYSTACK_SECRET_KEY=sk_test_your-paystack-secret-key
PAYSTACK_PUBLIC_KEY=pk_test_your-paystack-public-key

# OZOW Payment Configuration
OZOW_API_KEY=your-ozow-api-key
OZOW_SITE_CODE=your-ozow-site-code
OZOW_PRIVATE_KEY=your-ozow-private-key

# SMS Service Configuration
SMS_API_KEY=your-sms-api-key
SMS_API_USERNAME=your-sms-username

# Email Service Configuration
SENDGRID_API_KEY=SG.your-sendgrid-api-key
FROM_EMAIL=noreply@fuelsos.co.za

# Database Configuration (if using additional databases)
REDIS_URL=redis://localhost:6379
MONGODB_URI=mongodb://localhost:27017/fuelsos

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Emergency Contacts
EMERGENCY_ADMIN_PHONE=+27123456789
EMERGENCY_ADMIN_EMAIL=emergency@fuelsos.co.za

# Geolocation Settings
DEFAULT_SEARCH_RADIUS_KM=10
MAX_SEARCH_RADIUS_KM=50

# Call Recording Configuration
ENABLE_CALL_RECORDING=true
CALL_RECORDING_BUCKET=fuelsos-call-recordings

# Compliance and Audit
AUDIT_LOG_RETENTION_DAYS=90
ENABLE_AUDIT_LOGGING=true

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1